
@{
    ViewData["Title"] = "PersonalDetails";
}

<h1>PersonalDetails</h1>

@using (Html.BeginForm())
{
    <table class="table table-bordered">
        <tr>
            <td>Enter name</td>
            <td>@Html.TextBox("username")</td>
        </tr>
        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("Gender","male") Male
                @Html.RadioButton("Gender","female") Female
            </td>
        </tr>
        <tr>
            <td >Select Hobbies</td>
            <td>
                <input type="checkbox" name=hobbies value="Music"/> Music
                <input type="checkbox" name=hobbies value="Videos"/> Videos
                <input type="checkbox" name=hobbies value="Games"/> Games
                <input type="checkbox" name=hobbies value="Reading"/> Reading
           </td>
        </tr>
        <tr>
            <td>Would you like to Get NewsLetter</td>
            <td>
                @Html.DropDownList("options")
            </td>
        </tr>
        <tr>
            <td>
                <input class=btn-primary type="submit" name="submit">
            </td>
        </tr>

    </table>
}
